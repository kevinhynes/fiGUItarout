#: import ksc keysigchooser

<ChooserButton@Button>:
    font_name: "Arial"
    font_size: self.width
    border: [2, 2, 2, 2]
    size_hint: [None, 1]


<RootNoteChooser>:
    orientation: "vertical"
    box: self.parent  # `box` doesn't exist when rule is first read.
    spinner: spinner

    ChooserLabel:
        box: root.box
        text: "ROOT NOTE"
    BoxLayout:
        orientation: "horizontal"
        ChooserButton:
            text: u'\u25C4'
            width: root.box.width * (1/32)
            on_press: root.decrement_root_note_idx()
        Spinner:
            id: spinner
            text_autoupdate: True
            background_color: [1, 1, 1, 1]
            font_size: root.box.box_font_size or self.width
            values: ['C', 'C#/Db', 'D', 'D#/Eb', 'E', 'F', 'F#/Gb', 'G', 'G#/Ab', 'A', 'A#/Bb', 'B']
            on_text: root.on_new_root_note_chosen(self.text)
        ChooserButton:
            text: u'\u25BA'
            width: root.box.width * (1/32)
            on_press: root.increment_root_note_idx()


<ModeChooser>:
    box: self.parent  # `box` doesn't exist when rule is first read.
    spinner: spinner

    BoxLayout:
        orientation: "vertical"
        ChooserLabel:
            box: root.box
            text: "MODE"
        BoxLayout:
            orientation: "horizontal"
            ChooserButton:
                text: u'\u25C4'
                width: root.box.width * (1/32)
                on_press: root.decrement_group_idx()
            Spinner:
                id: spinner
                text_autoupdate: True
                background_color: [1, 1, 1, 1]
                font_size: root.box.box_font_size or self.width
                on_text: root.on_new_mode_chosen(self.text)
            ChooserButton:
                text: u'\u25BA'
                width: root.box.width * (1/32)
                on_press: root.increment_group_idx()


<ModeGroupChooser@BoxLayout>:
    box: self.parent
    spinner: spinner
    orientation: "vertical"
    ChooserLabel:
        box: root.box
        text: "MODE GROUP"
    Spinner:
        id: spinner
        text_autoupdate: True
        background_color: [1, 1, 1, 1]
        values: ["All", "Modern", "Pentatonic", "Minor"]
        font_size: root.box.box_font_size or self.width

<KeySigChooser>:
    id: keysigchooser
    size_hint: [None, None]
    size: [dp(1000), dp(100)]
    top: self.top_prop
    root_note_idx: rootnotechooser.root_note_idx
    mode_filter: modechooser.mode_filter
    key_sig_text: rootnotechooser.spinner.text + " " + modechooser.spinner.text
    BoxLayout:
        id: box
        box_font_size: self.width / 30
        pos_hint: {"center": [0.5, 0.5]}
        size_hint: [None, None]
        orientation: "vertical"
        canvas:
            Color:
                rgba: [1, 1, 1, 0.5]
            Rectangle:
                size: self.size
                pos: self.pos
        BoxLayout:
            orientation: "horizontal"
            size_hint: [1, 0.7]
            RootNoteChooser:
                id: rootnotechooser
                box: box
                size_hint: [2, 1]
            ModeChooser:
                id: modechooser
                box: box
                mode_group: modegroupchooser.spinner.text
                size_hint: [4.5, 1]
            ModeGroupChooser:
                id: modegroupchooser
                box: box
                size_hint: [3, 1]