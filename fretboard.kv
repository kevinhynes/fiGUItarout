<Fretboard>:
    id: fretboard
    box_pos: box.pos
    BoxLayout:
        id: box
        size_hint: [None, None]
        pos_hint: {"center": [0.5, 0.5]}
        orientation: "vertical"
        String:
            id: s6
            fretboard: fretboard
            fret_positions: fretboard.fret_positions
            open_note_val: fretboard.tuning[5]
            num_frets: fretboard.num_frets
            root_note_idx: fretboard.root_note_idx
