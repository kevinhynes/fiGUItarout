<TabViewer>:
    bar_width: 10
    scroll_type: ['bars', 'content']


<TabWidget>:
    size_hint_y: None
    height: self.step_y * 10
    canvas.before:
        # White background.
        Color:
            rgba: (1, 1, 1, 1)
        Rectangle:
            size: (self.measure_start + self.tab_width, self.height)
            pos: self.pos

        # Add lines.
        Color:
            rgba: (0, 0, 0, 1)
        # Measure start line.
        Line:
            points:
                (self.measure_start, self.y + self.step_y * 8,
                self.measure_start, self.y + self.step_y * 3)
        # Staff lines.
        Line:
            points:
                (self.x, self.y + self.step_y * 3,
                self.measure_start + self.tab_width, self.y + self.step_y * 3)
        Line:
            points:
                (self.x, self.y + self.step_y* 4,
                self.measure_start + self.tab_width, self.y + self.step_y * 4)
        Line:
            points:
                (self.x, self.y + self.step_y * 5,
                self.measure_start + self.tab_width, self.y + self.step_y * 5)
        Line:
            points:
                (self.x, self.y + self.step_y * 6,
                self.measure_start + self.tab_width, self.y + self.step_y * 6)
        Line:
            points:
                (self.x, self.y + self.step_y * 7,
                self.measure_start + self.tab_width, self.y + self.step_y * 7)
        Line:
            points:
                (self.x, self.y + self.step_y * 8,
                self.measure_start + self.tab_width, self.y + self.step_y * 8)
        # Measure end line.
        Line:
            points:
                (self.measure_end, self.y + self.step_y * 8,
                self.measure_end, self.y + self.step_y * 3)

FloatLayout:
    TabViewer:
        pos_hint: {'center_y': 0.5}