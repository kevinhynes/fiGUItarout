<ScaleTextChooser>:
    scale_text: spinner.text
    orientation: "vertical"
    ChooserLabel:
        id: label
        text: "SCALE TEXT"
    Spinner:
        id: spinner
        values: ["Notes", "Notes - No Accidentals", "Scale Degrees"]
        font_size: root.box_font_size or 18
        text_autoupdate: True


<ScaleColorChooser>:
    orientation: "vertical"
    highlights: noteselector.highlights
    id: scalecolorchooser
    ChooserLabel:
        id: label
        font_size: root.box_font_size or 18
        text: "HIGHLIGHTS"
    NoteSelector:
        id: noteselector
        orientation: "horizontal"
    KeySigDisplay:
#        root_note_idx: fbdisplay.root_note_idx
#        mode_filter: fbdisplay.mode_filter
        scale_text: scalecolorchooser.scale_text


<ScaleOptionsChooser>:
    scale_text: scale_text_chooser.scale_text
    BoxLayout:
        id: box
        box_font_size: self.width / 30
        orientation: "horizontal"
        size_hint: [None, None]
        canvas:
            Color:
                rgba: [1, 1, 1, 0.5]
            Rectangle:
                size: self.size
                pos: self.pos
        ScaleTextChooser:
            id: scale_text_chooser
            box_font_size: box.box_font_size
        ScaleColorChooser:
            box_font_size: box.box_font_size
            scale_text: scale_text_chooser.scale_text
