#: import cdsply chorddisplay
#: import ROW_HEIGHT chorddisplay.ROW_HEIGHT


<BackGroundColorWidget>:
    background: (0, 0, 0, 0)
    canvas.before:
        Color:
            rgba: self.background
        Rectangle:
            size: self.size
            pos: self.pos


<ChordDisplay>:
    id: display
    size_hint: [None, None]
    width: major.box.width
    top: self.top_prop
    canvas:
        Color:
            rgba: (0, 0, 1, 1)
        Line:
            rectangle: (*self.pos, *self.size)
            width: 2
    FloatLayout:
        id: scroll_child
        size_hint: [None, None]
        width: major.box.width
        height:
            titlebar.height + major.height + minor.height + dominant.height \
            + suspended.height + diminished.height + augmented.height
        canvas:
            Color:
                rgba: (0, 1, 0, 1)
            Line:
                rectangle: (*self.pos, *self.size)
                width: 2
        ChordTitleBar:
            id: titlebar
            top: scroll_child.top
            size_hint_x: None
            width: major.box.width
            y: major.top
            note_idxs: display.note_idxs
            display: display
        ChordGroup:
            id: major
            chord_group: 'Major'
            display: display
            top: titlebar.y
            y: minor.top
            note_idxs: display.note_idxs
            mode_filter: display.mode_filter
            root_note_idx: display.root_note_idx
            tuning: display.tuning
        ChordGroup:
            id: minor
            chord_group: 'Minor'
            top: major.y
            y: dominant.top
            display: display
            note_idxs: display.note_idxs
            mode_filter: display.mode_filter
            root_note_idx: display.root_note_idx
            tuning: display.tuning
        ChordGroup:
            id: dominant
            chord_group: 'Dominant'
            top: minor.y
            y: suspended.top
            display: display
            note_idxs: display.note_idxs
            mode_filter: display.mode_filter
            root_note_idx: display.root_note_idx
            tuning: display.tuning
        ChordGroup:
            id: suspended
            chord_group: 'Suspended'
            top: dominant.y
            y: diminished.top
            display: display
            note_idxs: display.note_idxs
            mode_filter: display.mode_filter
            root_note_idx: display.root_note_idx
            tuning: display.tuning
        ChordGroup:
            id: diminished
            chord_group: 'Diminished'
            top: suspended.y
            y: augmented.top
            display: display
            note_idxs: display.note_idxs
            mode_filter: display.mode_filter
            root_note_idx: display.root_note_idx
            tuning: display.tuning
        ChordGroup:
            id: augmented
            chord_group: 'Augmented'
            top: diminished.y
            display: display
            note_idxs: display.note_idxs
            mode_filter: display.mode_filter
            root_note_idx: display.root_note_idx
            tuning: display.tuning


<ChordGroup>:
    size_hint: [None, None]
    height: ROW_HEIGHT
    canvas.before:
        Color:
            rgba: (0.4, 0.4, 0.4, 1)
        Rectangle:
            size: self.size
            pos: self.pos
        Color:
            rgba: (0, 0, 0, 1)
        Line:
            points:
                (self.x, self.y, self.x + self.width,
                self.y, self.x + self.width,
                self.y + self.height, self.x,
                self.y + self.height)
            close: True
#        BorderImage:
#            # BorderImage behaves like the CSS BorderImage
#            size: (100, 100)
#            pos: (10, 10)
#            border: 50, 50, 50, 50
#            source: './images/red_button.png'


<ChordTitleBar>:
    orientation: 'horizontal'
    size_hint: [1, None]
    height: ROW_HEIGHT
    label: label
    canvas:
        Color:
            rgba: (0, 0, 0, 1)
        Rectangle:
            size: self.size
            pos: self.pos
        Color:
            rgba: (0.5, 0.5, 0.5, 1)
        Rectangle:
            size: (self.width - 10, self.height - 10)
            pos: (self.x + 5, self.y + 5)
    ChordTitleBarLabel:
        id: label
        text: 'Chords'
    ChordTitleBarLabel:
        text: root.chrom_scale[root.note_idxs[0]]
    ChordTitleBarLabel:
        text: root.chrom_scale[root.note_idxs[1]]
    ChordTitleBarLabel:
        text: root.chrom_scale[root.note_idxs[2]]
    ChordTitleBarLabel:
        text: root.chrom_scale[root.note_idxs[3]]
    ChordTitleBarLabel:
        text: root.chrom_scale[root.note_idxs[4]]
    ChordTitleBarLabel:
        text: root.chrom_scale[root.note_idxs[5]]
    ChordTitleBarLabel:
        text: root.chrom_scale[root.note_idxs[6]]


<ChordTitleBarLabel@Label>:
    multiline: True
    halign: 'center'
    valign: 'center'
    canvas:
        Color:
            rgba: (0, 0, 0, 1)
        Line:
            rectangle: (*self.pos, *self.size)


<ChordRow>:
    orientation: 'horizontal'
    size_hint_x: None
    width: sum(child.width for child in self.children)
    label: label
    Label:
        id: label
    ChordDiagramMain:
        note_idx: root.note_idxs[0]
        root_note_idx: root.root_note_idx
        chord_num: root.chord_num
        display: root.display
        voicings: root.voicings
        chord_name: root.label.text
        row: root
        mode_filter: root.mode_filter
