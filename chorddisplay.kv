<BackGroundColorWidget>:
    background: (1, 0, 0, 0.5)
    canvas.before:
        Color:
            rgba: self.background
        Rectangle:
            size: self.size
            pos: self.pos


<ChordDisplay>:
    id: display
    BoxLayout:
        id: display_box
        orientation: 'vertical'
        size_hint: [None, None]
        height: root.height * 3
        width: root.width
        y: 0
        ChordGroup:
            id: major
            chord_group: 'Major'
            display: display
            background: (0, 0, 1, 0)
            y: minor.top
        ChordGroup:
            id: minor
            chord_group: 'Minor'
            top: major.y
            y: dominant.top
            display: display
            background: (1, 0, 0, 0.5)
        ChordGroup:
            id: dominant
            chord_group: 'Dominant'
            top: minor.y
            y: suspended.top
            display: display
            background: (0, 1, 0, 0.5)
        ChordGroup:
            id: suspended
            chord_group: 'Suspended'
            top: dominant.y
            y: diminished.top
            display: display
            background: (1, 1, 0, 0.5)
        ChordGroup:
            id: diminished
            chord_group: 'Diminished'
            top: suspended.y
            y: augmented.top
            display: display
            background: (0, 1, 1, 0.5)
        ChordGroup:
            id: augmented
            chord_group: 'Augmented'
            top: diminished.y
            display: display
            background: (1, 0, 1, 0.5)


<ChordGroup>:
    size_hint: [1, None]
    height: dp(90)


<ChordRow>:
    orientation: 'horizontal'
    label: label
    Label:
        id: label
    ChordDiagramContainer:
    ChordDiagramContainer:
    ChordDiagramContainer:
    ChordDiagramContainer:
    ChordDiagramContainer:
    ChordDiagramContainer:
    ChordDiagramContainer:


