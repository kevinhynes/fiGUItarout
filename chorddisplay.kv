<BackGroundColorWidget>:
    background: (1, 0, 0, 0.5)
    canvas.before:
        Color:
            rgba: self.background
        Rectangle:
            size: self.size
            pos: self.pos


<ChordDisplay>:
    id: display
    BoxLayout:
        id: display_box
        orientation: 'vertical'
        MajorChordGroup:
            id: major
            display: display
            background: (0, 0, 1, 0.5)
            y: minor.top
        MinorChordGroup:
            id: minor
            top: major.y
            y: dominant.top
            display: display
            background: (1, 0, 0, 0.5)
        DominantChordGroup:
            id: dominant
            top: minor.y
            display: display
            background: (0, 1, 0, 0.5)


<ChordGroup>:
    size_hint: [1, None]
    height: dp(90)


<ChordRow>:
    orientation: 'horizontal'
    label: label
    Label:
        id: label
    ChordGraphic:
        text: "1"
    ChordGraphic:
        text: "2"
    ChordGraphic:
        text: "3"
    ChordGraphic:
        text: "4"
    ChordGraphic:
        text: "5"
    ChordGraphic:
        text: "6"
    ChordGraphic:
        text: "7"


<ChordGraphic@Label>:
