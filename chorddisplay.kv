#: import cdsply chorddisplay
#: import ROW_HEIGHT chorddisplay.ROW_HEIGHT


<BackGroundColorWidget>:
    background: (0, 0, 0, 0)
    canvas.before:
        Color:
            rgba: self.background
        Rectangle:
            size: self.size
            pos: self.pos


<ChordDisplay>:
    id: display
    canvas:
        Color:
            rgba: (0, 0, 1, 1)
        Line:
            rectangle: (*self.pos, *self.size)
            width: 2
            dash_offset: 5
    FloatLayout:
        id: display_box
#        orientation: 'vertical'
        size_hint: [None, None]
        height: ROW_HEIGHT * 21
        width: root.width
        canvas:
            Color:
                rgba: (0, 1, 0, 1)
            Line:
                rectangle: (*self.pos, *self.size)
                width: 2
                dash_offset: 50
        ChordTitleBar:
            id: titlebar
            top: display_box.top
            y: major.top
            note_idxs: display.note_idxs
            display: display
        ChordGroup:
            id: major
            chord_group: 'Major'
            display: display
#            background: (1, 0, 0, 0.5)
            top: titlebar.y
            y: minor.top
            note_idxs: display.note_idxs
            mode_filter: display.mode_filter
            root_note_idx: display.root_note_idx
        ChordGroup:
            id: minor
            chord_group: 'Minor'
            top: major.y
            y: dominant.top
            display: display
#            background: (0, 0, 1, 0.5)
            note_idxs: display.note_idxs
            mode_filter: display.mode_filter
            root_note_idx: display.root_note_idx
        ChordGroup:
            id: dominant
            chord_group: 'Dominant'
            top: minor.y
            y: suspended.top
            display: display
#            background: (0, 1, 0, 0.5)
            note_idxs: display.note_idxs
            mode_filter: display.mode_filter
            root_note_idx: display.root_note_idx
        ChordGroup:
            id: suspended
            chord_group: 'Suspended'
            top: dominant.y
            y: diminished.top
            display: display
#            background: (1, 1, 0, 0.5)
            note_idxs: display.note_idxs
            mode_filter: display.mode_filter
            root_note_idx: display.root_note_idx
        ChordGroup:
            id: diminished
            chord_group: 'Diminished'
            top: suspended.y
            y: augmented.top
            display: display
#            background: (0, 1, 1, 0.5)
            note_idxs: display.note_idxs
            mode_filter: display.mode_filter
            root_note_idx: display.root_note_idx
        ChordGroup:
            id: augmented
            chord_group: 'Augmented'
            top: diminished.y
            display: display
#            background: (1, 0, 1, 0.5)
            note_idxs: display.note_idxs
            mode_filter: display.mode_filter
            root_note_idx: display.root_note_idx


<ChordGroup>:
    size_hint: [1, None]
    height: ROW_HEIGHT


<ChordTitleBar>:
    orientation: 'horizontal'
    size_hint: [1, None]
    height: ROW_HEIGHT
    label: label
    Label:
        id: label
        text: 'Chords'
    Label:
        text: root.chrom_scale[root.note_idxs[0]]
    Label:
        text: root.chrom_scale[root.note_idxs[1]]
    Label:
        text: root.chrom_scale[root.note_idxs[2]]
    Label:
        text: root.chrom_scale[root.note_idxs[3]]
    Label:
