#: import fbd fretboarddisplay

<FretboardDisplay>:
    id: fbdisplay
    keysigdisplay: keysigdisplay
    fretboard: fretboard
    orientation: "vertical"
    BoxLayout:
        orientation: "horizontal"
        size_hint: [1, 0.2]
        Label:
            text: "    " + fbdisplay.key_sig_text
            text_size: self.size
            font_size: self.height / 2.5
            font_name: "./fonts/Impact"
            halign: "left"
            valign: "middle"
        KeySigDisplay:
            id: keysigdisplay
            root_note_idx: fbdisplay.root_note_idx
            mode_filter: fbdisplay.mode_filter
            scale_text: fbdisplay.scale_text
            notes_to_highlight: fbdisplay.notes_to_highlight

    Fretboard:
        id: fretboard
        tuning: fbdisplay.tuning
        num_frets: fbdisplay.num_frets
        root_note_idx: fbdisplay.root_note_idx
        mode_filter: fbdisplay.mode_filter
        scale_text: fbdisplay.scale_text
        notes_to_highlight: fbdisplay.notes_to_highlight
