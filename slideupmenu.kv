#: import pua slideupmenu

<SlidingMenu>:
    tuning: tuner.tuning
    num_frets: numfretschanger.num_frets
    root_note_idx: keysigchooser.root_note_idx
    mode_filter: keysigchooser.mode_filter
    key_sig_text: keysigchooser.key_sig_text
    scale_text: scale_options_chooser.scale_text
    notes_to_highlight: scale_options_chooser.notes_to_highlight
    notes_or_octaves: scale_options_chooser.notes_or_octaves

    do_default_tab: False
    TabbedPanelItem:
        text: "Key Signature"
        BoxLayout:
            orientation: "horizontal"
            BoxLayout:
                orientation: "vertical"
                KeySigChooser:
                    id: keysigchooser
                ScaleOptionsChooser:
                    id: scale_options_chooser
            ChordDisplay:

    TabbedPanelItem:
        text: "Tuner"
        BoxLayout:
            Tuner:
                id: tuner
            NumFretsChanger:
                id: numfretschanger
                box_height: tuner.box_height
                box_width: tuner.box_width
            BoxLayout:
    TabbedPanelItem:
        text: "Metronome"
        BoxLayout:
            Metronome:

<SlideUpMenu>:
    tuning: sliding_menu.tuning
    num_frets: sliding_menu.num_frets
    root_note_idx: sliding_menu.root_note_idx
    mode_filter: sliding_menu.mode_filter
    key_sig_text: sliding_menu.key_sig_text
    scale_text: sliding_menu.scale_text
    notes_to_highlight: sliding_menu.notes_to_highlight
    notes_or_octaves: sliding_menu.notes_or_octaves

    SlidingMenu:
        id: sliding_menu
        top_hint: 0
        size_hint: [1, 0.5]
        pos_hint: {"top": self.top_hint}
    Button:
        pos_hint: {"right": 1, "bottom": 0}
        size_hint: [None, None]
        size: [150, 50]
        text: "Menu"
        on_press: sliding_menu.animate_slide()
